#include <stdio.h>
#include <unistd.h>
int main(void) { 
  
int e_sesor_temperatura,s_ventoinha;

while(1){
printf("\n Para acionar a Ventonhina\n ");
printf("Deve atingir uma temperatura\n ");
printf("de 90ºC.\n Graus: ");
scanf("%i",&e_sesor_temperatura);

    if (e_sesor_temperatura < 90)
    {
    s_ventoinha = 0;
    printf("\n Veiculo com temperatura abaixo de 90ºC\n ");
    printf("Ventoinha Desligada\n ");
    sleep (1); 
    }  
    else if (e_sesor_temperatura == 90)
    {
    s_ventoinha =  1;
    printf("\n Veiculo com temperatura de 90ºC\n ");
    printf("Ventoinha Ligada\n ");
    sleep (1);
    sleep (1);
    sleep (1);
    sleep (1);
    if (e_sesor_temperatura == 70)
    s_ventoinha =  0;
    }
  }
}
    
    
